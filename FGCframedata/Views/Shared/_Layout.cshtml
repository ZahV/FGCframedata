@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FGC Frame Data</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ml-auto">
        @Html.ActionLink("FGC Frame Data", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="active nav-link">
                    @Html.ActionLink("Home", "Index", "Home")
                <li class="nav-item nav-link">
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
                <li class="active nav-link">
                    @Html.ActionLink("Games", "Index", "CharacterRosters")
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FGC Frame Data</p>
        </footer>
    </div>
    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    <script src="~/Scripts/bootstrap.js"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
